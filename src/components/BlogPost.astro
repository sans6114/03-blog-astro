---
import {Formatter} from '@utils/formatter'
const {frontmatter, url} = Astro.props
// console.log(frontmatter)
---
<div class="flex flex-col w-[350px] md:w-full bg-white shadow-2xl rounded-3xl items-center p-4 md:p-2 m-2 md:h-[450px] md:mt-[100px]">
    <img class="object-cover w-full h-56 rounded-lg lg:w-64" src={frontmatter.image} alt={frontmatter.title}>

    <div class="flex flex-col justify-between py-6 lg:mx-6">
        <a href={url} class="text-xl font-semibold text-gray-800 hover:underline">
            {frontmatter.description}
        </a>
        

        <span class="text-sm text-gray-500 dark:text-gray-300">{Formatter.formatDate(frontmatter.date)}</span>
    </div>
</div>
