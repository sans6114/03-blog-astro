---
import type { CollectionEntry } from 'astro:content';
import Image from 'astro/components/Image.astro';
interface Props {
  author: CollectionEntry<'author'>
}

const {author} = Astro.props
const {name, avatar, github, linkedIn, twitter, bio, subtitle} = author.data
console.log(name)
---






<div class="max-w-lg mx-auto my-10 bg-white rounded-lg shadow-md p-5">
     <Image
    class="object-cover h-56 rounded-lg lg:w-full"
     src={avatar}
      alt={name}
      width={avatar.width}
      quality="low"
      loading="lazy"
      format={avatar.format}
      />
    <h2 class="text-center text-2xl font-semibold mt-3">{name}</h2>
    <p class="text-center text-gray-600 mt-1">{subtitle}</p>
    <div class="flex justify-center mt-5">
      <a href={twitter} class="text-blue-500 hover:text-blue-700 mx-3">Twitter</a>
      <a href={linkedIn}>
      <a href={github} class="text-blue-500 hover:text-blue-700 mx-3">GitHub</a>
    </div>
    <div class="mt-5">
      <p class="text-gray-600 mt-2">{bio}</p>
      <div class=" flex justify-end">
          <a href=`/blog/${author.id}`>Leer m√°s</a>

      </div>
    </div>
  </div>
