---
import type { GetStaticPaths } from "astro";
import type { PostProps } from "src/interfaces/post-interface";
  import MainLayout from '../../layouts/MainLayout.astro';
import TypedBlogPost from 'src/components/TypedBlogPost.astro';
  import { siteConfig } from "../../config/site-config";
  import { getCollection } from "astro:content";


  export const getStaticPaths = (async ({ paginate }) => {
    const posts = await getCollection('blog') 
    //const frontmatter = posts.data

  return paginate(posts, { pageSize: 2 });
}) satisfies GetStaticPaths;



const { page } = Astro.props;
---

<MainLayout>
  <div class="py-10 mx-auto">
    <h1 class="text-center text-3xl font-semibold text-gray-800 capitalize lg:text-4xl mt-10">
        {siteConfig.title}
      </h1>
  </div>

  <section class="bg-gray-900 mx-2 rounded-3xl py-2 shadow-xl" aria-label="Entradas de blog">
    <div class="flex flex-col md:flex-row justify-center items-center md:items-between w-3/6 md:w-full mx-auto">
        {page.data.map((post) => <TypedBlogPost post={post}/>)}
      </div> 
  </section>

  <section aria-label="Controles" class="flex justify-between mt-10">

<!--   page .. ?? prev   -->
    <a
      href={page.url.prev}
      class:list={{
        disabled: !page.url.prev,
      }}>Anteriores</a
    >
    
<!--   page .. ?? next   -->
    <a
      href={page.url.next}
      class:list={{
        disabled: !page.url.next,
      }}>Siguientes</a
    >
  </section>
</MainLayout>

<style>
  a {
    @apply bg-blue-500 text-white p-2 rounded hover:bg-blue-600 cursor-pointer;
  }

  .disabled {
    @apply bg-gray-600 hover:bg-gray-600;
  }
</style>
